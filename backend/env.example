# Application Settings
APP_NAME=FRAI Boilerplate
APP_DESCRIPTION=A minimal, production-ready FastAPI boilerplate
APP_VERSION=0.1.0

# Environment Selection
# Use one of: development, testing, production
ENVIRONMENT=development

# Database Settings
# Storage type: 'postgres' for PostgreSQL or 'memory' for in-memory SQLite
STORAGE_TYPE=postgres

# PostgreSQL Settings (only needed if STORAGE_TYPE=postgres)
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=your-db-name-here
POSTGRES_TEST_DB=your-test-db-name-here
POSTGRES_USER=your-db-user-here
POSTGRES_PASSWORD=your-db-password-here

# AI Settings
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Development Settings (when ENVIRONMENT=development)
DEBUG=true
RELOAD=true

# Testing Settings (when ENVIRONMENT=testing)
# DEBUG=false
# RELOAD=false

# Production Settings (when ENVIRONMENT=production)
# DEBUG=false
# RELOAD=false
