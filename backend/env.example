# Application Settings
APP_NAME=InterviewInsight AI
APP_DESCRIPTION=A production-ready AI-powered interview transcript analysis platform
VERSION=1.0.0

# Environment Selection
# Use one of: development, testing, production
ENVIRONMENT=development

# Database Settings
# Storage type: 'postgres' for PostgreSQL or 'memory' for in-memory SQLite
STORAGE_TYPE=postgres

# PostgreSQL Settings (only needed if STORAGE_TYPE=postgres)
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=interview_insight_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_TEST_DB=interview_insight_test_db

# AI Settings
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Development Settings (when ENVIRONMENT=development)
DEBUG=true
RELOAD=true

# Testing Settings (when ENVIRONMENT=testing)
# DEBUG=false
# RELOAD=false

# Production Settings (when ENVIRONMENT=production)
# DEBUG=false
# RELOAD=false

# Logging
LOG_LEVEL=INFO
